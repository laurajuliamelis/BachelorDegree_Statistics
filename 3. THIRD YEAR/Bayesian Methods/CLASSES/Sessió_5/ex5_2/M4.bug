

model {

	for ( i in 1:n) {
	
		y[i] ~ dnorm(mu[i], tau[i])
		mu[i] <- b0 + b1*x1[i] + b2*x2[i] + b3*x1[i]*x2[i]
		tau[i] <- tau1*x2[i] + tau2*(1-x2[i])
	}

	b0 ~ dnorm(0, 1.0E-8)
	b1 ~ dnorm(0, 1.0E-8)
	b2 ~ dnorm(0, 1.0E-8)
	b3 ~ dnorm(0, 1.0E-8)

	tau1 ~ dgamma(0.01, 0.001)
	tau2 ~ dgamma (0.01,0.001)


}

